<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net>

    <appender name="Console" type="log4net.Appender.ConsoleAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%level %thread %logger %newline%message %newline %newline" />
      </layout>
    </appender>

    <appender name="Events" type="log4net.Appender.RollingFileAppender">
      <file value="events.log" />
      <appendToFile value="true" />
      <maximumFileSize value="100KB" />
      <maxSizeRollBackups value="2" />
      <layout type="log4net.Layout.PatternLayout">
        <header type="log4net.Util.PatternString" value="[Loggins starts on %date] %newline %newline" />
        <footer type="log4net.Util.PatternString" value="[Loggins ends on %date] %newline %newline" />
        <conversionPattern value="%level %thread %logger %newline%message %newline %newline" />
      </layout>
    </appender>

    <appender name="Warns" type="log4net.Appender.RollingFileAppender">
      <file value="warns.log" />
      <appendToFile value="true" />
      <maximumFileSize value="100KB" />
      <maxSizeRollBackups value="2" />
      <layout type="log4net.Layout.PatternLayout">
        <header type="log4net.Util.PatternString" value="[Loggins starts on %date] %newline %newline" />
        <footer type="log4net.Util.PatternString" value="[Loggins ends on %date] %newline %newline" />
        <conversionPattern value="%level %thread %logger %newline%message %newline %newline" />
      </layout>
    </appender>

    <logger name="InfoLogger">
      <level value="INFO" />
      <appender-ref ref="Events" />
    </logger>

    <logger name="ErrorLogger">
      <level value="INFO" />
      <appender-ref ref="Warns" />
      <appender-ref ref="Console" />
    </logger>

  </log4net>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>