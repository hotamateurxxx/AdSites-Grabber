<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="AdSitesGrabber.Model" assembly="AdSitesGrabber">

  <!-- Mappings for class 'Category' -->
  <class name="Category" table="Categories">

    <!-- Identity mapping -->
    <id name="RecId">
      <column name="recId" />
      <generator class="guid.comb" />
    </id>

    <!-- One-to-many mapping: Items -->
    <list name="Items" table="CategoryItems" cascade="all" lazy="false">
      <key column="category" />
      <index column="order" />
      <!--<one-to-many class="CategoryItem" />-->
      <composite-element class="CategoryItem">
        <property name="Name" column="name"/>
      </composite-element>
    </list>
    
  </class>

</hibernate-mapping>